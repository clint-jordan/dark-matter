---
import { getCollection, render } from "astro:content";
import PostLayout from "../../layouts/PostLayout.astro";
import path from "path";

export async function getStaticPaths() {
  const collection = "notes"
  const posts = await getCollection(collection);
  
  return posts.map((post) => {
    // Extract directory from entry.id (e.g., "rhcsa/003-rhel-initial-setup.md" or "001-intro.md")
    const filePath = post.id;
    const dir = path.dirname(filePath); // "rhcsa" or "."
    const filename = path.basename(filePath, '.md');
    
    // Construct full path: include directory if present, otherwise just slug
    const fullPath = dir !== '.' 
      ? `${dir}/${post.data.slug}` 
      : post.data.slug;
    
    return {
      params: { path: fullPath },
      props: { 
        post: {
          ...post,
          data: {
            ...post.data,
          },
        },
      },
    };
  });
}

const { post } = Astro.props;
const { Content, headings } = await render(post);
---

<PostLayout frontmatter={post.data} headings={headings} collectionName="notes">
  <Content />
</PostLayout>

