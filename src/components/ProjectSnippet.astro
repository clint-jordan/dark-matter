---
import { processDate } from "../lib/utils";
import Anchor from "./common/Anchor.astro";
import Tags from "./tags/Tags.astro";

export type Props = {
  title: string;
  description: string;
  url: string;
  tags?: string[];
  published?: Date;
  updated?: Date;
  githubUrl?: string;
  liveDemoUrl?: string;
};

const { title, description, url, tags, published, updated, githubUrl, liveDemoUrl } = Astro.props;
---

<div class="relative theme-text theme-transition flex flex-col gap-3 mb-8">
  <div class="flex justify-between items-center">
    <Anchor url={url} additonalClasses="text-xl" hoverUnderline>
      {title}
    </Anchor>
    <div class="flex flex-row gap-5">
      <span>
        {githubUrl ? <Anchor url={githubUrl} external hoverUnmute>GitHub</Anchor> : null}
      </span>
      <span>
        {liveDemoUrl ? <Anchor url={liveDemoUrl} external hoverUnmute>Live</Anchor> : null}
      </span>
    </div>
  </div>
  <p class="">
    {description}
  </p>
  <Tags tags={tags}/>
</div>