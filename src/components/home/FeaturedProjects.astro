---
import { getCollection } from "astro:content";
import PostSnippet from "../PostSnippet.astro";
import ProjectSnippet from "../ProjectSnippet.astro";
import Anchor from "../common/Anchor.astro";
import { siteConfig } from "../../site.config";
import { getPosts } from "../../lib/utils";
import { getUrl } from "../../lib/utils";

const featuredProjects = (await getPosts("projects"))
  .filter((project) => project.featured === true)
  .slice(0, 5);
---

{featuredProjects.length > 0 && (
  <div class="space-y-0 mb-20">
    <div class="flex justify-between items-center pb-5">
      <h2 class="text-3xl sm:text-4xl font-display theme-text">Featured Projects</h2>
      <Anchor url={getUrl("projects")} additonalClasses="theme-accent hover:theme-text transition-colors" hoverUnderline>
        View all projects â†’
      </Anchor>
    </div>
    
    <div class="space-y-6">
      {featuredProjects.map((project) => (
        <ProjectSnippet
          title={project.title}
          description={project.description}
          url={project.url}
          tags={project.tags}
          published={project.published}
          updated={project.updated}
          githubUrl={project.githubUrl}
          liveDemoUrl={project.liveDemoUrl}
        />
      ))}
    </div>
  </div>
)}
