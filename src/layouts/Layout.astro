---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import TabbedCodeBlocks from "../components/common/TabbedCodeBlocks.astro";
import "../styles/global.css";
import { siteConfig } from "../site.config";
import { getUrl } from "../lib/utils";


const defaultTheme = siteConfig.site.defaultTheme ?? "dark";
const allowThemeToggle = siteConfig.site.allowThemeToggle ?? true;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href={getUrl("/favicon.svg")} />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.bunny.net" />
    <link
      href="https://fonts.bunny.net/css?family=ibm-plex-mono:400,400i,500,500i,600,600i,700,700i"
      rel="stylesheet"
    />
    
    <!-- Theme detection script - runs before page renders -->
      <script is:inline define:vars={{ defaultTheme, allowThemeToggle }}>
        const theme = (() => {
          if (!allowThemeToggle && (defaultTheme === "light" || defaultTheme === "dark")) {
            return defaultTheme;
          }
          if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
            return localStorage.getItem("theme") ?? "light";
          }
          if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
            return "dark";
          }
          return "light";
        })();

        if (theme === "light") {
          document.documentElement.classList.remove("dark");
        } else {
          document.documentElement.classList.add("dark");
        }

        window.localStorage.setItem("theme", theme);
      </script>

    <slot name="head" />
  </head>
  <body class="theme-bg theme-text theme-transition font-mono min-h-screen flex flex-col justify-between">
    <div>
      <Header />
      <main class="mb-30">
        <slot />
      </main>
    </div>
    <Footer />
    <TabbedCodeBlocks />
  </body>
</html>
